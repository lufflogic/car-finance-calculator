<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1" fx:controller="com.fluffyluffs.car.finance.calculator.controller.CalculatorController">
   <children>
      <VBox layoutX="10.0" layoutY="50.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label minWidth="150.0" prefWidth="150.0" text="Car Value" />
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="carValue" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label minWidth="150.0" prefWidth="150.0" text="Term (Months)" />
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="termMths" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label minWidth="150.0" text="Deposit" />
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="deposit" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label minWidth="150.0" text="Dealer Contribution" />
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="dealerContrib" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label minWidth="150.0" text="Residual" />
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="residual" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label minWidth="150.0" text="Interest Rate (%)" />
                  <AnchorPane HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="interestRate" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button fx:id="clearCtl" mnemonicParsing="false" text="Clear" />
                  <Button fx:id="calculateCtl" mnemonicParsing="false" text="Calculate" />
              </buttons>
            </ButtonBar>
            <StackPane>
               <children>
                  <Label fx:id="monthly">
                     <StackPane.margin>
                        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
                     </StackPane.margin>
                  </Label>
               </children>
            </StackPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
